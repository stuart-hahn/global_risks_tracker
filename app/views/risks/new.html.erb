<h1>New Risk</h1>

<% if @risk.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@risk.errors.count, "error") %> prohibited this risk from being saved:</h2>
    <ul>
      <% @risk.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @risk, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :severity %>
    <%= form.select :severity, ['low', 'medium', 'high'] %>
  </div>

  <div>
    <%= form.label :mitigations %>
    <%= form.text_area :mitigations %>
  </div>

  <div>
    <%= form.submit 'Create Risk' %>
  </div>
<% end %>
